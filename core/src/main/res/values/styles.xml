<resources>

    <style name="AppDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent_material_light</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/divider</item>
    </style>
    <style name="Divider.Vertical">
        <item name="android:layout_width">@dimen/divider_height</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="Divider.Dark">
        <item name="android:background">@color/divider_dark</item>
    </style>
    <style name="Divider.Dark.Vertical">
        <item name="android:layout_width">@dimen/divider_height</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EasyPermissions" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="EasyPermissions.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
